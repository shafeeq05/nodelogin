<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <link rel="stylesheet" href="users.css" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

    <style>
      body{
        margin-top: 10px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }
      /* h2{
        position: fixed;
      } */
      #a{
        position:absolute;
        right: 100px;
        top: 10px;
      }
      #btn{
        position: fixed;
      }
    </style>
</head>
<body class="pt-3">
  
    <h2>Users</h2>
    <input type="search" id="search" class="form-control" placeholder="Search" >
    
    <div class="first">
     <%data.forEach(x=>{ %>
        <form action="/users" method="POST" id="users">
            <div class="card" id="users">
            
                <img src="<%=x.picture %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= x.name %></h5>
                  <p class="card-text" id="ph"><%= x.bio %></p>
                  <!-- <input name="phone" type="submit" value="" placeholder="check" class="btn btn-primary"> -->
                  <button name="phone" type="submit" value="<%= x.phone %>" class="btn btn-primary" target="_blank">Edit Profile</button>
                  
                  <a href="http://localhost:3000/users/delete"><button name="delete" type="submit" value="<%= x.phone %>" class="btn btn-danger">DeleteProfile</button></a>
                </div>
              </div>
            </form>
     <% }) %>
     <a id="a" href="http://localhost:3000/users/logout"><button id="btn" type="submit" class="btn btn-primary"  name="logout" value="logout">Logout</button></a>
    <!-- class="card" -->
</div>
  <script>
   
   const search = document.getElementById('search')
    search.addEventListener('input',()=>{
     
     
      const inpu=document.getElementById('search').value.toLowerCase()
      const item=document.querySelectorAll('#users')
      item.forEach((x)=>{
        const text=x.textContent;
        if(text.toLowerCase().match(inpu)){
          x.style.display='block'
        }else{
          x.style.display='none'
        }
      })

    })
      
    
    
    
  </script>
</body>
</html>