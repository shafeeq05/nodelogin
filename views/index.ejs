        <input type="tel" name="phone" placeholder="Enter your phone number" class="form-control">
        <input type="file" name="picture" id="" class="form-control" value="picture">
        <input type="text" name="email" placeholder="Enter your email"class="form-control">
        <textarea name="bio" id=""  placeholder="bio" class="form-control"></textarea>
        <input type="submit" value="next" class="btn btn-primary">

    </form>    
